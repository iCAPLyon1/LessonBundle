{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/icaplesson/css/styles.css') }}" screen="media" />
{% endblock %}

{% block title %}{{ _resource.resourceNode.name }}{% endblock %}

{% block resourceBreadcrumb %}
{#    {{ parent() }}#}
    {% if path is defined and path != null %}
        <li>
            <a href="{{ path('icap_lesson', { 'resourceId': _resource.id}) }}">{{ _resource.getResourceNode().getName() }}</a>
        </li>
        {{ _self.chapterBreadcrumb(path, _resource, chapter) }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if app.user is not empty or config.getParameter('is_pdf_export_active') == true %}
        <div class="lesson-header-buttons">
            {% if app.user is not empty %}
                {% render controller('IcapNotificationBundle:FollowerResource:renderForm', {'resourceId': _resource.resourceNode.id, 'resourceClass': _resource.resourceNode.class}) %}
            {% endif %}
            {% if config.getParameter('is_pdf_export_active') == true %}
                <a href="{{ path('icap_lesson_pdf', {'resourceId':_resource.id})}}" target="_blank" class="btn btn-default"><i class="fa fa-file-pdf-o text-danger"></i> {{ 'pdf_export'|trans({}, 'platform') }}</a>
            {% endif %}
        </div>
    {% endif %}
    {% block lesson_content %}
    {% endblock %}
{% endblock %}

{% macro chapterBreadcrumb(path, _resource, chapter) %}
    {% for path_part in path %}
        {% if chapter.id != path_part.id%}
            <li><a href="{{ path('icap_lesson_chapter', { 'resourceId': _resource.id, 'chapterId': path_part.id}) }}">{{ path_part.title }}</a></li>
        {%  else %}
            <li class="active"><a href="{{ path('icap_lesson_chapter', { 'resourceId': _resource.id, 'chapterId': path_part.id}) }}">{{ path_part.title }}</a></li>
        {% endif %}
    {% endfor %}
{% endmacro %}